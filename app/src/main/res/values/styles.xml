<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#aaa</item>
    </style>
    <!--액션바 ㄴㄴ-->
    <style name="AppTheme.CustomStatus">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>
    <!--버튼 리니어 레이어 스타일-->
    <style name="ButtonLinearStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--버튼 텍스트 스타일-->
    <style name="ButtonTextStyle">
        <item name="android:layout_margin">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--페이스북 로그인 버튼-->
    <style name="FacebookLoginButton" parent="ButtonLinearStyle">
        <item name="android:text">@string/facebookSignUpBtn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--상단 타이틀 텍스트 스타일(로그인, 회원가입 글자 등)-->
    <style name="TitleTextStyle">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">22dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!--에디트텍스트 스타일(회원가입, 로그인 등)-->
    <style name="EditTextStyle">
        <item name="android:layout_marginLeft">@dimen/edit_text_right_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_text_left_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingStart">@dimen/edit_text_left_padding</item>
        <item name="android:textSize">14dp</item>
        <!--밑줄-->
        <item name="colorControlNormal">#aaaaaa</item>
        <!--밑줄 포커스시-->
        <item name="colorControlActivated">#777777</item>
    </style>
    <!--에디트텍스트 라벨 스타일-->
    <style name="EditTextLabel">
        <item name="android:textSize">@dimen/guid_label_text_size</item>
        <item name="android:paddingStart">@dimen/guid_label_left_padding</item>
        <item name="android:layout_marginTop">@dimen/guid_label_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/edit_text_bottom_margin</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="actionbarTitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
